@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hillerød Sejlklub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>



<header class="text-black text-center">
    <div class="container">
        <h1 class="display-4">Velkommen til Hillerød Sejlklub</h1>
        <p class="lead">Sejlads, fællesskab og naturoplevelser for hele familien.</p>
    </div>
</header>

<div class="text-center">
    <img src="~/img/Havn.jpg" alt="Sejlklub billede" class="img-fluid rounded" />
</div>

<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Om Hillerød Sejlklub</h2>
        <p class="text-center mb-5">
            Hillerød Sejlklub blev grundlagt i 19XX og har i generationer været samlingspunkt for sejlsportsentusiaster.
            Vi tilbyder sejlkurser, hyggesejladser, regattaer og sociale arrangementer i smukke omgivelser ved Hillerød Sø.
        </p>

       
    </div>
</section>

<section class="py-5">
    <div class="container text-center">
        <h2 class="mb-4">Klar til at komme på vandet?</h2>
        <a href="" class="btn btn-primary btn-lg">Bliv medlem i dag!</a>
    </div>
</section>

<footer class="bg-dark text-white text-center py-3">
    <div class="container">
        &copy; 2025 Hillerød Sejlklub | Alle rettigheder forbeholdes
    </div>
</footer>



